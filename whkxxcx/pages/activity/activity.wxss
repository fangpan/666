/* pages/newinfor/newinfor.wxss */

.goTop{
  height:76rpx;
  width:76rpx;
  position:fixed;
  bottom:30px;
  right:30rpx;
}

.item{
  overflow:hidden;
  position:relative;
  border-radius:8rpx;
  width:96%;
  box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.5);
  -webkit-box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.5);
  margin: 10px 0 20px 2%;

}
.item .img{
  width:100%;
  height:350rpx;
  vertical-align:bottom;
}
.item .info {
  color:#fff;
  position:absolute;
  top:0%;
  left:10%;
  height:100%;
  width:80%;
  z-index:1;
  box-sizing:border-box;
  text-align:center;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content:center;
}
.info .h2{
  font-size:32rpx;
  font-weight:600;
  text-shadow:2rpx 2rpx rgba(0,0,0,.4);
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
  display:-webkit-box;
  -webkit-box-orient:vertical;
}

.weui-media-box__info {
   line-height: 18px;
   color:#ffffff;
}

.courseNum{
  background: url("data:image/png;base64,");
  background-size: 18px 16px;
  -moz-background-size:18px 16px;
  padding-left: 20px;
  background-repeat:no-repeat;
  background-position-y:center;
}

.weui-loadmore_line{
   margin-top: 3.4em;
}




