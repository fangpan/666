.BGimg{
	width: 100%;
	height: 440rpx;
	position: relative;
}
.imgInfo{
	margin:20px auto;
	width:60px;
	height:60px;
}
.inforMSG{
	width: 100%;
	margin: 0 auto;
	position: absolute;
	top: 340rpx;
	text-align: center;
}
.userinfo-avatar {
    width: 150rpx;
	height: 150rpx;
	margin-top: 30rpx;
}
.weui-cell__hd {
    margin-right: 0;
}
.inforMSG .weui-cell__bd{
	line-height:66rpx;
}
.weui-cell__hd image{
	height: 28px;
	width:28px;
	display:block;
	margin-right: 10px;
}

.loadBtn{
	background-color:#ff9600;
	color: #ffffff;
	width: 25%;
    font-size: 28rpx;

}
button::after{
	border: none!important;
}
.Logoback{
	width: 210rpx;
	height: 210rpx;
	margin: 0 auto;
	/* background: #f6f5ec; */
	background: #ffffff;
	border-radius: 50%;
	padding: 10rpx;
}

 .weui-cells:after,.weui-cells:before{
     border: none!important; 
     right: 15px!important;
     left: 15px!important;
} 
.weui-cell:before{
	right: 15px!important;
	border-top: 1rpx solid #eeeeee;
}

.weui-cells {
    margin-top: 250rpx;
    padding: 0;
    position: none;
    font-size: 13px;
    border-top: 1rpx solid #eeeeee;
    border-bottom: 1rpx solid #eeeeee;
}