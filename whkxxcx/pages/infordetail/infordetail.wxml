<view class="container" style="padding:0rpx">

<swiper indicator-dots="{{indicatorDots}}"
                  autoplay="{{autoplay}}" class="swiperCon">
    <block wx:for="{{imgUrls}}" wx:for-index="idx" wx:key="">
      <swiper-item>
        <image src="{{ item }}" class="slide-image" mode="aspectFill" style="width:100%;height:100%;"/>
      </swiper-item>
    </block>
  </swiper>

   <view class="weui-article articleTitle">
        <view style="font-size:16px;margin-bottom:20px;font-weight: bold;">{{ title }}</view>
        <view class="inforTime">{{time}}</view>
   </view>

    <view class="weui-article">
      <view class="articleCon">
            {{ content }}     
      </view>
    </view>
    
</view>


