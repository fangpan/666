.picker-view {
    width: 100%;
    display: flex;
    z-index:9999;
    background-color: #fff;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
    left: 0rpx;
    height: 50vh;
}
.btn {
    width:96%;
    border-bottom:1px solid #ddd;
    font-size:16px;
    color:#666666;
    height:40px;
    position:absolute;
    top:0;
    left:0;
    line-height:40px;
    padding:0 2%;

}
.cont {
    width: 100%;
    height: 389rpx;
}
.picker-item {
    line-height: 36px;
    margin-left: 5rpx;
    margin-right: 5rpx;
    text-align: center;
    height: 36px;
}
.select{
	display:inline-block;
	text-align:center;
	width:100%;
	padding:20rpx 0;
	background:#eee;
	font-size:32rpx;
	color:#FF9600;
}
.zhanmList{
    padding:0 10rpx;
}

.picker{
  background: url("data:image/png;base64,");
  background-size: 24px 24px;
  -moz-background-size:24px 24px;
  background-repeat:no-repeat;
  background-position-x:right;
  background-position-y:center;
}
.address{
      background: url("data:image/png;base64,");
      background-size: 24px 24px;
      -moz-background-size:24px 24px;
      background-repeat:no-repeat;
      background-position-x:right;
      background-position-y:center;
     margin: 20rpx;
     border: 1px solid #FF9600;
